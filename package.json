{
  "name": "metalsmith-choo",
  "version": "0.0.1",
  "description": "Render a choo app in a static website and give choo the hand in front",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "babel --copy-files src/ -d lib/",
    "watch": "babel -w src/ -d lib/",
    "commit": "git-cz",
    "lint": "standard src/**/*.js",
    "lint:fix": "standard --fix src/**/*.js",
    "test": "npm run lint && mocha -w --compilers js:babel-register",
    "test:single": "npm run lint && mocha --compilers js:babel-register",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "choo",
    "metalsmisth",
    "front",
    "static",
    "webapp"
  ],
  "author": "William Castandet <wcastand@gmail.com> (https://github.com/wcastand)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "choo": "^3.3.0",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "metalsmith": "^2.2.0",
    "metalsmith-markdown": "^0.2.1",
    "mocha": "^3.1.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^4.3.5",
    "standard": "^8.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "globals": [
      "CHOO_INITIAL_STATE"
    ]
  },
  "dependencies": {
    "create-html": "^1.1.0"
  }
}
